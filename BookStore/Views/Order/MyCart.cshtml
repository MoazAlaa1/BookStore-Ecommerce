@model ShoppingCart

<!-- breadcrumb start -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="page-title">
                    <h2>cart</h2>
                </div>
            </div>
            <div class="col-sm-6">
                <nav aria-label="breadcrumb" class="theme-breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                        <li class="breadcrumb-item active">cart</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb End -->
<!--section start-->
<section class="cart-section section-b-space">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <table class="table cart-table table-responsive-xs">
                    <thead>
                        <tr class="table-head">
                            <th scope="col">image</th>
                            <th scope="col">product name</th>
                            <th scope="col">price</th>
                            <th scope="col">quantity</th>
                            <th scope="col">action</th>
                            <th scope="col">total</th>
                        </tr>
                    </thead>
                    <tbody>                       
                        @foreach (var book in Model.lstBooks)
                        {
                            <tr>
                                <td>
                                    <a href="#"><img src="@book.ImageName" alt=""></a>
                                </td>
                                <td>
                                    <a href="#">@book.Title</a>
                                    <div class="mobile-cart-content row">
                                        <div class="col-xs-3">
                                            <div class="qty-box">
                                                <div class="input-group">
                                                    <input type="number" name="quantity" class="form-control input-number qty" data-id="@book.BookId" data-price="@book.Price"
                                                           value="@book.SalesQty" min="1" max="@book.BookQty" onchange="ChangeQty(this)">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-xs-3">
                                            <h2 class="td-color">
                                                <a asp-controller="Order" asp-action="DeleteFromCart" asp-route-id="@book.BookId" class="icon"><i class="ti-close"></i></a>
                                            </h2>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <h2>$@book.Price</h2>
                                </td>
                                <td>
                                    <div class="qty-box">
                                        <div class="input-group">
                                            <input type="number" name="quantity"
                                                   class="form-control input-number qty"
                                                   data-id="@book.BookId" data-price="@book.Price" min="1" max="@book.BookQty"
                                                   value="@book.SalesQty" onchange="ChangeQty(this)">
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <a class="icon" asp-controller="Order" asp-action="DeleteFromCart" asp-route-id="@book.BookId"><i class="ti-close" ></i></a>
                                </td>
                                <td>
                                    <h2 data-id="@book.BookId" class="td-color totalPrice">@book.Total</h2>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
                <table class="table cart-table table-responsive-md">
                    <tfoot>
                        <tr>
                            <td>total price :  </td>
                            <td>
                                <h2>$<span id="OverAllTotal">@Model.SubTotal</span></h2>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
        <div class="row cart-buttons">
            <div class="col-6"><a asp-controller="Home" asp-action="Index" class="btn btn-solid">continue shopping</a></div>
            <div class="col-6"><a asp-controller="Order" asp-action="CustomerInvoiceInfo" class="btn btn-solid">check out</a></div>
        </div>
    </div>
</section>
<!--section end-->
@section Scripts
{
    <script>
        function ChangeQty(input) {
            let id = $(input).data("id");
            let price = $(input).data("price");
            let qty = $(input).val();

            
            if (isNaN(qty) || qty < 0) {
                qty = 0;
            }

            let OverAllTotal = 0;
            $(".totalPrice").each(function (i) {
                if ($(this).data("id") === id) {
                    let total = (price * qty).toFixed(2);
                    $(this).html(total);
                }
                OverAllTotal += parseFloat($(this).text());
            });

            OverAllTotal = OverAllTotal.toFixed(2);  
            $("#OverAllTotal").html(OverAllTotal);

            
            $.ajax({
                url: '/Order/AddToCart?bookId=' + id,
                type: 'POST',
                data: {
                    id: id,
                    qty: qty,
                    total: OverAllTotal
                },
                success: function (response) {
                    console.log("Cart updated successfully");
                },
                error: function (xhr, status, error) {
                    console.error("Failed to update cart: " + error);
                }
            });
        }
    </script>

}

@model TbPages

    
@section Styles
{
    <style>
        /* Custom CSS */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f5f5f5;
        }

        .about-header {
            background-color: #f8f9fa;
            padding: 50px 0;
            text-align: center;
        }

            .about-header h1 {
                font-size: 3rem;
                font-weight: bold;
                color: #343a40;
            }

            .about-header p {
                font-size: 1.2rem;
                color: #6c757d;
            }

        .about-section {
            background-color: #ffffff;
            padding: 60px 20px;
            border-radius: 10px;
            box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.05);
        }

            .about-section h2 {
                font-size: 2.5rem;
                font-weight: bold;
                color: #343a40;
            }

            .about-section p {
                font-size: 1.1rem;
                color: #6c757d;
                line-height: 1.8;
            }

        .about-image img {
            width: 100%;
            border-radius: 10px;
        }

        .team-section {
            padding: 60px 20px;
        }

        .team-member {
            text-align: center;
            margin-bottom: 30px;
        }

            .team-member img {
                border-radius: 50%;
                width: 150px;
                height: 150px;
                object-fit: cover;
            }

            .team-member h5 {
                margin-top: 15px;
                font-size: 1.2rem;
                color: #343a40;
            }

            .team-member p {
                font-size: 1rem;
                color: #6c757d;
            }

        footer {
            background-color: #343a40;
            color: white;
            padding: 20px;
            text-align: center;
        }

            footer a {
                color: white;
                text-decoration: none;
            }

                footer a:hover {
                    color: #ffc107;
                }
    </style>
}
    <section class="about-header">
        <div class="container">
            <h1>@Model.Title</h1>
        </div>
    </section>
    <section class="about-section my-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    @Html.Raw(Model.Description)
                </div>
                <div class="col-md-6 about-image">
                    <img src="~/Uploads/Pages/@Model.ImageName" alt="About BookStore" class="img-fluid">
                </div>
            </div>
        </div>
    </section>





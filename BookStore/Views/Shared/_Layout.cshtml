@using BookStore.Bl
@inject SignInManager<ApplicationUser> signInManger
@inject IPages oClsPages
<!DOCTYPE html>

<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>BookStore</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="description" content="BookStore">
    <meta name="keywords" content="BookStore">
    <meta name="author" content="BookStore">
    <link rel="icon" href="~/Fontend/images/favicon/1.png" type="image/x-icon">
    <link rel="shortcut icon" href="~/Fontend/images/favicon/1.png" type="image/x-icon">
    <title>BookStore - BookStore E-commerce </title>

    <!--Google font-->
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,900" rel="stylesheet">

    <!-- Icons -->
    <link rel="stylesheet" type="text/css" href="~/Fontend/css/fontawesome.css">

    <!--Slick slider css-->
    <link rel="stylesheet" type="text/css" href="~/Fontend/css/slick.css">
    <link rel="stylesheet" type="text/css" href="~/Fontend/css/slick-theme.css">

    <!-- Animate icon -->
    <link rel="stylesheet" type="text/css" href="~/Fontend/css/animate.css">

    <!-- Themify icon -->
    <link rel="stylesheet" type="text/css" href="~/Fontend/css/themify-icons.css">

    <!-- Bootstrap css -->
    <link rel="stylesheet" type="text/css" href="~/Fontend/css/bootstrap.css">

    <!-- Theme css -->
    <link rel="stylesheet" type="text/css" href="~/Fontend/css/color19.css" media="screen" id="color">
    @RenderSection("Styles",false)

</head>
<body>
    <!-- header start -->
    <header class="header-tools marketplace">
        <div class="mobile-fix-option"></div>
        <div class="top-header">
            <div class="container-fluid custom-container">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="header-contact">
                            <ul>
                                <li>Welcome to Our <span id="websiteName"></span></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-6 text-right">
                        <ul class="header-dropdown">
                            <li class="onhover-dropdown mobile-account">
                                <i class="fa fa-user" aria-hidden="true"></i>
                                My Account
                                <ul class="onhover-show-div">
                                    @if (signInManger.IsSignedIn(User))
                                    {
                                        <li><a asp-controller = "Order" asp-action = "MyOrder" data-lng="es" > MyOrders </a></li>
                                        <li><a asp-controller = "User" asp-action = "LogOut" data-lng="es" > Logout </a></li>
                                    }
                                    else
                                    {
                                        <li><a asp-controller="User" asp-action = "Login" data-lng = "en" > Login </a></li>
                                    }
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid custom-container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="main-menu">
                        <div class="menu-left">
                            <div class="brand-logo">
                                <a asp-controller="Home" asp-action="Index">
                                    <img id="Logo" src=""
                                         class="img-fluid blur-up lazyload" alt="">
                                </a>
                            </div>
                        </div>
                        <div class="menu-right pull-right">
                            <div>
                                <nav id="main-nav">
                                    <div class="toggle-nav"><i class="fa fa-bars sidebar-bar"></i></div>
                                    <ul id="main-menu" class="sm pixelstrap sm-horizontal">
                                        <li>
                                            <div class="mobile-back text-right">
                                                Back<i class="fa fa-angle-right pl-2"
                                                       aria-hidden="true"></i>
                                            </div>
                                        </li>
                                        <li>
                                            <a asp-controller="Home" asp-action="Index">Home</a>
                                        </li>
                                        <li>
                                            <a asp-controller="Category" asp-action="List">Category</a>
                                        </li>
                                        @{
                                            var pages = oClsPages.GetAll();
                                            for (int i = 0; i < pages.Count; i++)
                                            {
                                                    <li>
                                                        <a asp-controller="Pages" asp-action="Index" asp-route-id="@pages[i].PageId">@pages[i].Title</a>
                                                    </li>
                                             }
                                        }
                                        
                                    </ul>
                                </nav>
                            </div>
                            <div>
                                <div class="icon-nav">
                                    <ul>
                                        <li class="onhover-div mobile-search">
                                            <div>
                                                <a asp-controller="Home" asp-action="Search">
                                                    <img src="~/Fontend/images/icon/search.png" onclick="openSearch()"
                                                     class="img-fluid blur-up lazyload" alt=""> <i class="ti-search"></i>
                                                </a>
                                            </div>
                                        </li>
                                        <li class="onhover-div mobile-cart">
                                            <div>
                                                <a asp-controller="Order" asp-action="MyCart">
                                                    <img src="~/Fontend/images/icon/cart.png" class="img-fluid blur-up lazyload" alt=""> 
                                                         <i class="ti-shopping-cart"></i>
                                                </a>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- header end -->
        @RenderBody()
        <!-- footer -->
        <footer class="footer-light">
            <section class="section-b-space light-layout">
                <div class="container">
                    <div class="row footer-theme partition-f">
                        <div class="col-lg-4 col-md-6">
                            <div class="footer-title footer-mobile-title">
                                <h4>about</h4>
                            </div>
                            <div class="footer-contant">
                                <div class="footer-logo"><img id="Logo2" src="" alt=""></div>
                                <p id="Description">
                                </p>
                                <div class="footer-social">
                                    <ul>
                                    <li><a id="lnkFacebook" href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                                    <li><a id="lnkYoutube" href="#"><i class="fa fa-google-plus" aria-hidden="true"></i></a></li>
                                    <li><a id="lnktwitter" href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                                    <li><a id="lnkinstagram" href="#"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="sub-title">
                                <div class="footer-title">
                                    <h4>store information</h4>
                                </div>
                                <div class="footer-contant">
                                    <ul class="contact-list">
                                        <li >
                                        <i class="fa fa-map-marker"></i><span id="Address"></span>
                                        </li>
                                         <li><i class="fa fa-phone"></i>Call Us:<span id="ConnectNumber"></span></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </footer>
        <!-- footer end -->
    <!-- tap to top -->
    <div class="tap-top top-cls">
        <div>
            <i class="fa fa-angle-double-up"></i>
        </div>
    </div>
    <!-- tap to top end -->
    <!-- latest jquery-->
    <script src="~/Fontend/js/jquery-3.3.1.min.js"></script>

    <!-- fly cart ui jquery-->
    <script src="~/Fontend/js/jquery-ui.min.js"></script>

    <!-- exitintent jquery-->
    <script src="~/Fontend/js/jquery.exitintent.js"></script>
    <script src="~/Fontend/js/exit.js"></script>

    <!-- popper js-->
    <script src="~/Fontend/js/popper.min.js"></script>

    <!-- slick js-->
    <script src="~/Fontend/js/slick.js"></script>

    <!-- menu js-->
    <script src="~/Fontend/js/menu.js"></script>

    <!-- lazyload js-->
    <script src="~/Fontend/js/lazysizes.min.js"></script>

    <!-- Bootstrap js-->
    <script src="~/Fontend/js/bootstrap.js"></script>

    <!-- Bootstrap Notification js-->
    @* <script src="~/Fontend/js/bootstrap-notify.min.js"></script> *@

    <!-- Fly cart js-->
    <script src="~/Fontend/js/fly-cart.js"></script>

    <!-- Theme js-->
    <script src="~/Fontend/js/script.js"></script>
    <script src="~/modules/helper.js"></script>
    <script src="~/modules/settings.js"></script>
    @RenderSection("Scripts",false)
</body>
</html>

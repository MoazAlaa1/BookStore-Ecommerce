<!--section start-->
@model UserModel
<section class="register-page section-b-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3>create account</h3>
                <div class="theme-card">
                    <form class="theme-form" method="post" enctype="multipart/form-data"
                        asp-controller="User" asp-action="Register">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div class="form-row">
                            <div class="col-md-6">
                                <label >First Name</label>
                                <input asp-for="FirstName" type="text" class="form-control" id="fname" placeholder="First Name"
                                       required="">
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label >Last Name</label>
                                <input asp-for="LastName" type="text" class="form-control" id="lname" placeholder="Last Name"
                                       required="">
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col-md-6">
                                <label >email</label>
                                <input asp-for="Email" type="text" class="form-control" id="email" placeholder="Email" required="">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label >Password</label>
                                <input asp-for="Password"  type="password" class="form-control" id="review"
                                       placeholder="Enter your password" required="">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-solid">create Account</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Section ends-->
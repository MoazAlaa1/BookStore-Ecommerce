@model TbSupplier
 <div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Supplier form</h4>
                <p class="card-description"> @ResGeneral.lblNew or @ResGeneral.lblEdit </p>
                <form class="forms-sample" method="post" enctype="multipart/form-data"
                      asp-controller="Supplier" asp-action="Save" role="form" asp-area="Admin">
                      <input type="hidden" asp-for="SupplierId"/>
                      <input type="hidden" asp-for="CurrentState"/>
                    <div class="form-group">
                        <label>@ResAdmin.lblSupplierName</label>
                        <input type="text" class="form-control" placeholder="Supplier Name" asp-for="SupplierName" maxlength="100">
                        <span asp-validation-for="SupplierName" class="text-danger"></span>
                    </div> 
                    <div class="form-group">
                        <label>@ResAdmin.lblPhone</label>
                        <input type="tel" class="form-control" placeholder="Phone Number" asp-for="PhoneNumber" maxlength="16">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>           
                    <button type="submit" class="btn btn-gradient-primary me-2">@ResGeneral.lblSubmit</button>
                    <a class="btn btn-light" asp-controller="Supplier" asp-action="List" asp-area="Admin">@ResGeneral.lblCancel</a>
                </form>
            </div>
        </div>
    </div>
    
</div>

@section Scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    
}
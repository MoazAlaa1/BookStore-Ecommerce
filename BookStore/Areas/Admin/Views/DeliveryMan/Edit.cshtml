@model TbDeliveryMan
 <div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">DeliveryMan form</h4>
                <p class="card-description"> @ResGeneral.lblNew or @ResGeneral.lblEdit </p>
                <form class="forms-sample" method="post" enctype="multipart/form-data"
                      asp-controller="DeliveryMan" asp-action="Save" role="form" asp-area="Admin">
                    <input type="hidden" asp-for="DeliveryManId" />
                      <input type="hidden" asp-for="CurrentState" />
                    <div class="form-group">
                        <label>@ResAdmin.lblDeliveryManName</label>
                        <input type="text" class="form-control" placeholder="DeliveryMan Name" asp-for="DeliveryManName" maxlength="100">
                        <span asp-validation-for="DeliveryManName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>@ResAdmin.lblAge</label>
                        <input type="number" class="form-control" asp-for="@Model.Age" min="6" max="70">
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div> 
                    <div class="form-group">
                        <label>@ResAdmin.lblAddress</label>
                        <input type="text" class="form-control" asp-for="@Model.Address" maxlength="50">
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div> 
                    <div class="form-group">
                        <label>@ResAdmin.lblSalary</label>
                        <input type="number" class="form-control" asp-for="@Model.Budget">
                        <span asp-validation-for="Budget" class="text-danger"></span>
                    </div> 
                    <div class="form-group">
                        <label>@ResAdmin.lblStatus</label>
                        <select asp-for="Status" class="form-control">
                            <option value="1">Available</option>
                            <option value="0">Unavailable</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>                    
                    <button type="submit" class="btn btn-gradient-primary me-2">@ResGeneral.lblSubmit</button>
                    <a class="btn btn-light" asp-controller="DeliveryMan" asp-action="List" asp-area="Admin">@ResGeneral.lblCancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}